    <TextView
      android:id="@+id/no_license"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:background="@null"
      android:text="Please activate the license"
      android:textSize="18sp" />

    <!--<include layout="@layout/white_balance_layout" />-->

    <GridLayout
      android:id="@+id/grid_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_weight="0"
      android:background="#88808080"
      android:columnCount="2"
      android:paddingLeft="10dp"
      android:paddingTop="3dp"
      android:paddingRight="10dp"
      android:paddingBottom="6dp"
      android:rowCount="4">

      <TextView
        android:id="@+id/barcode_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

      <TextView
        android:id="@+id/length_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

      <TextView
        android:id="@+id/symbology_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
    </GridLayout>

    <LinearLayout
      android:visibility="gone"
      android:layout_above="@id/grid_layout"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#88808080"
      android:paddingLeft="10dp"
      android:paddingTop="3dp"
      android:paddingRight="10dp"
      android:paddingBottom="6dp">
      <TextView
        android:id="@+id/symbology_verifcation_grade_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
      <TextView
        android:id="@+id/symbology_verifcation_grade_contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
      <TextView
        android:id="@+id/symbology_verifcation_score_contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    </LinearLayout>

    <ImageView
      android:id="@+id/cropImageView"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:background="#FF000000"
      android:visibility="gone"
      />
  </RelativeLayout>
</RelativeLayout>
