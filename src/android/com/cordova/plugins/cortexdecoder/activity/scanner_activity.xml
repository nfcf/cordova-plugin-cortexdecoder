<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.sample.plugin.NewActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Activity"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp" />

  <RelativeLayout
    android:id="@+id/cortex_scanner_view"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="0dp"
    android:layout_weight="1"
    android:paddingBottom="0dp">

    <com.codecorp.cortex_scan.view.CrosshairsView
      android:id="@id/crosshairs_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:onClick="resetContinuousScan"
      android:visibility="invisible" />

    <!--<RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>-->

    <!--        <com.codecorp.cortex_scan.RegionOfInterestView
                android:id="@+id/roi_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->

    <com.codecorp.cortex_scan.view.CropFrameView
      android:id="@+id/cropFrameView"
      android:layout_width="100dp"
      android:layout_height="100dp"
    />

    <com.codecorp.cortex_scan.view.PicklistView
      android:id="@+id/picklist_view"
      android:layout_width="280dp"
      android:layout_height="15dp"
      android:layout_centerInParent="true"
      android:onClick="resetContinuousScan"
      android:visibility="invisible" />

    <TextView
      android:id="@+id/no_license"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:background="@null"
      android:text="Please activate the license"
      android:textSize="18sp" />

    <include layout="@layout/white_balance_layout" />

    <TextView
      android:id="@+id/tap_to_scan_again"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      android:background="#c0000000"
      android:clickable="false"
      android:gravity="center_vertical|center_horizontal"
      android:padding="10dp"
      android:text="@string/tap_to_scan_again"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#FFFFFF"
      android:visibility="invisible" />


    <ImageView
      android:id="@+id/sliderButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      android:onClick="translateLiveCameraSettingsView"
      android:src="@drawable/white_balance_scale"
      android:layout_below="@id/titleLayout"/>

    <ImageView
      android:id="@+id/zoomButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      android:layout_toRightOf="@id/sliderButton"
      android:onClick="zoomInCamera"
      android:src="@drawable/zoom_magnifier_white"
      android:layout_below="@id/titleLayout"/>

    <ImageView
      android:id="@+id/focusButton"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      android:layout_toRightOf="@id/zoomButton"
      android:onClick="focusInCamera"
      android:src="@drawable/focuspref_tq"
      app:tint="#FFFFFFFF"
      android:layout_below="@id/titleLayout"
      android:visibility="gone"/>

    <ImageView
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:adjustViewBounds="true"
      android:contentDescription="@string/settings_desc"
      android:onClick="onSettingsClicked"
      android:padding="12dp"
      android:src="@drawable/settings_tq" />

    <GridLayout
      android:id="@+id/grid_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_weight="0"
      android:background="#88808080"
      android:columnCount="2"
      android:paddingLeft="10dp"
      android:paddingTop="3dp"
      android:paddingRight="10dp"
      android:paddingBottom="6dp"
      android:rowCount="4">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:text="@string/barcode_colon"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

      <TextView
        android:id="@+id/barcode_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:text="@string/length_colon"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

      <TextView
        android:id="@+id/length_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:text="@string/symbology_colon"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

      <TextView
        android:id="@+id/symbology_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
    </GridLayout>

    <LinearLayout
      android:visibility="gone"
      android:layout_above="@id/grid_layout"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#88808080"
      android:paddingLeft="10dp"
      android:paddingTop="3dp"
      android:paddingRight="10dp"
      android:paddingBottom="6dp">
      <TextView
        android:id="@+id/symbology_verifcation_grade_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
      <TextView
        android:id="@+id/symbology_verifcation_grade_contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
      <TextView
        android:id="@+id/symbology_verifcation_score_contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    </LinearLayout>

    <ImageView
      android:id="@+id/image_capture"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      android:paddingBottom="10dp"
      android:src="@drawable/image_capture_selector"
      android:visibility="invisible" />

    <ImageView
      android:id="@+id/getitnowlogo"
      android:layout_width="128dp"
      android:layout_height="128dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:adjustViewBounds="true"
      android:padding="10dp"
      android:src="@drawable/get_it_now"
      android:visibility="visible" />


    <View
      android:id="@+id/animationView"
      android:layout_width="2dp"
      android:layout_height="2dp"
      android:layout_centerInParent="true"
      android:background="@color/green"
      android:visibility="invisible" />

    <ImageView
      android:id="@+id/cropImageView"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:background="#FF000000"
      android:visibility="gone"
    />
  </RelativeLayout>
</RelativeLayout>
